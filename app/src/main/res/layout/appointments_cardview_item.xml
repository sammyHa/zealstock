<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/parent_layout_appt_card_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:background="@color/colorBackground">
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/swipe_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/ic_delete"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/swipe_item_delete"
        />
    <ImageView
        android:id="@+id/ic_phone"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/ic_phone"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/swipe_item_call"
        />
    <ImageView
        android:id="@+id/ic_complete"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/ic_check"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/swipe_item_complete"/>
    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/ic_edit"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/swipe_item_edit"/>
</LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@color/colorGrid">

            <TextView
                android:id="@+id/txt_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/txt_date_id"
                android:text="John Joe"
                android:textColor="@color/colorText" />
            <TextView
                android:id="@+id/txt_pipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="|"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txt_name_id"
                android:layout_alignTop="@id/txt_name_id"/>

            <TextView
                android:id="@+id/txt_time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/txt_name_id"
                android:layout_toRightOf="@id/txt_pipe"
                android:text=" at 2:30 pm"

                android:layout_marginLeft="10dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/txt_pipe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="|"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txt_time_id"
                android:layout_alignTop="@id/txt_name_id"/>

            <TextView
                android:id="@+id/txt_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/txt_time_id"
                android:layout_toRightOf="@id/txt_time_id"
                android:text="12/30/2018"
                android:layout_marginLeft="14dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/txt_Iphone_model_number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/txt_color_id"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="7+"
                android:textColor="@color/colorText"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txt_price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$70"
                android:textColor="@color/colorText"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txt_color_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLK"
                android:textColor="@color/colorText"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txt_price_id"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txt_address_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Market St, San Diego 92101"
                android:textColor="@color/colorText"
                android:layout_below="@id/txt_price_id"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt_phone_number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(858)-209-9478"
                android:textColor="@color/colorText"
                android:layout_below="@id/txt_address_id"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>

</RelativeLayout>